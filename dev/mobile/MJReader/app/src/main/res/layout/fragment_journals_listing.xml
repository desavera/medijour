<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.crossover.mjreader.JournalsListingActivityFragment"
    tools:showIn="@layout/activity_journals_listing">

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/journals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/text_size"
        android:textAppearance="?attr/textAppearanceListItem" />

    <Button
        android:id="@+id/read"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="15"
        android:text="@string/read"
        android:background="@color/readBlue"
        android:textSize="@dimen/text_size"
        android:onClick="paymentRequestAction" />

</LinearLayout>
